<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/registerTextinscription"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="18dp"
        android:text="Inscription"
        android:textColor="#81D4FA"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/registerEditLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registerEditLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@drawable/img_profil"
        android:ems="10"
        android:hint="enter username"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#8bc34a"
        android:textColorHint="#CFD8DC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/registerEditPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTextinscription" />

    <EditText
        android:id="@+id/registerEditPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@drawable/img_lock"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#8bc34a"
        android:textColorHint="#CFD8DC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/registerEditPasswordRepeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditLogin" />

    <EditText
        android:id="@+id/registerEditPasswordRepeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@drawable/img_lock"
        android:ems="10"
        android:hint="enter password repeat"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#8bc34a"
        android:textColorHint="#CFD8DC"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/registerButtonInscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditPassword" />

    <Button
        android:id="@+id/registerButtonInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="154dp"
        android:text="S'inscrire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditPasswordRepeat" />

</android.support.constraint.ConstraintLayout>